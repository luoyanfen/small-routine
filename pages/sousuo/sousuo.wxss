/* pages/sousuo/sousuo.wxss */

@font-face {
  font-family: "iconfont";
  src: url('data:application/x-font-woff2;charset=utf-8;base64,') format('woff2');
}

.iconfont {
  font-family: "iconfont" !important;
  font-size: 20px;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  margin: 16rpx;
}

.icon-sousuo:before {
  content: "\e62b";
}

/* 搜索框滑動效果 */

.header-search {
  height: 98rpx;
  background-color: #fff;
  display: flex;
  justify-content: left;
  align-items: center;
  padding-left: 20rpx;
  border-bottom: 1px solid #b2b2b8;
}

.search {
  background-color: #f6f6f7;
  width: 610rpx;
  height: 58rpx;
  border-radius: 10rpx;
  text-align: left;
  line-height: 58rpx;
  color: rgb(167, 164, 164);
  font-size: 14px;
}

.cancel {
  font-size: 14px;
  color: #ff7000;
  padding-left: 28rpx;
}

/* 导航栏 滑动效果css*/

.top-container {
  display: flex;
  justify-content: space-around;
  background-color: #fff;
}

.scroll {
  width: 680rpx;
  height: 70rpx;
  display: flex;
}
/* 没单击时的效果 */
.scroll view {
  font-size: 12px;
  height: 46rpx;
  line-height: 45rpx;
  color: #333;
  flex-shrink: 0;
  margin-right: 50rpx;
}
/* 导航栏第一个和最后一个与边的距离 */
.scroll view:first-child {
  margin-left: 10rpx;
}

.scroll view:last-child {
  margin-right: 20rpx;
}

.scroll .active {
  border-bottom: 4rpx solid rgb(237, 91, 0);
  color: rgb(237, 91, 0);
}

