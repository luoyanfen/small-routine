/* 排名以及主体部分文字的css */
/* align-items 盒子垂直居中 */

.body-content {
  background-color:#FFF;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 13px;
  border-bottom: 1px solid #eaeaf8;
}

.body-number {
